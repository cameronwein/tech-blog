<section class="wrapper">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <article class="container">
      <h2 class="title">Edit Post</h2>
      <form class="edit-post-form">
        <div class="edit-post">
          <label for="post-title">Title</label>
          <input name="post-title" type="text" value="{{post.title}}"/>
        </div>
        <div class="edit-post">
          <h3>Content</h3>
          <textarea name="content">{{post.content}}</textarea>
        </div>
        <div class="button-container">
          <button class="button" type="submit">Save Post</button>
        </div>
        <div class="button-container">
          <button class="button" type="button" id="delete-post-btn">Delete Post</button>
        </div>
      </form>
  </article>
  <form class="comment-wrapper comment-form">
    <div class="comment-container">
      <div class="comment-body-container">
        <textarea class="comment-body" name="comment-body"></textarea>
      </div>
      <div class="button-container">
        <button class="button" type="submit">Add Comment</button>
      </div>
    </div>
  </form>

  {{> comments post.comments}}
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>