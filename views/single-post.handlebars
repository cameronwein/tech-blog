<ol class="wrapper">
  <li class="container">
    {{> post-info post }}
  </li>

  {{#if loggedIn}}
    <form class="comment-wrapper comment-form">
      <div class="comment-container">
        <div class="comment-body-container">
          <textarea class="comment-body" name="comment-body"></textarea>
        </div>
        <div class="button-container">
          <button class="button" type="submit">Add Comment</button>
        </div>
      </div>
    </form>
  {{/if}}
  {{> comments post.comments}}
</ol>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/single-post.js"></script>
{{/if}}